<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Education - Teachers</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>

<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<section class="teachers">
    <h1 class="heading">expert tutors</h1>

    <form action="/teachers" method="post" class="search-tutor">
        <input type="text" name="search_box" maxlength="100" placeholder="search tutor..." required>
        <button type="submit" name="search_tutor" class="fas fa-search"></button>
    </form>
    
    <div class="box-container">
        <div class="box offer">
            <h3>become a tutor</h3>
            <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit Laborum, magnam!</p>
            <a href="/register" class="inline-btn">get started</a>
        </div>
        
        <% for(let i=1; i<=8; i++) { %>
        <div class="box">
            <div class="tutor">
                <img src="/images/pic-<%= i === 8 ? 1 : i + 1 %>.jpg" alt="tutor">
                <div>
                    <h3>john deo</h3>
                    <span>developer</span>
                </div>
            </div>
            <p>playlists: <span>4</span></p>
            <p>total videos: <span>18</span></p>
            <p>total likes: <span><%= i === 3 ? '1208' : '18' %></span></p>
            <a href="/teacher_profile" class="inline-btn">view profile</a>
        </div>
        <% } %>
    </div>
</section>

<%- include('partials/footer') %>
<script src="/script.js"></script>
</body>
</html>